{
  "name": "mcp-server-zendesk",
  "version": "0.1.0",
  "description": "MCP server for Zendesk integration - search articles and create tickets",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "node --watch src/index.ts",
    "start": "node dist/index.js",
    "start:ts": "node src/index.ts",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format src",
    "format:fix": "biome format --write src",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:api": "node scripts/test-api.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "zendesk",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=24.3.0",
    "npm": ">=11.4.2"
  },
  "volta": {
    "node": "24.3.0",
    "npm": "11.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hatappo/mcp-server-zendesk.git"
  },
  "bugs": {
    "url": "https://github.com/hatappo/mcp-server-zendesk/issues"
  },
  "homepage": "https://github.com/hatappo/mcp-server-zendesk#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.15.0",
    "dotenv-flow": "4.1.0",
    "node-zendesk": "6.0.1",
    "pino": "9.7.0",
    "pino-pretty": "13.0.0",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/node": "24.0.10",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.30.1",
    "eslint-plugin-import": "2.32.0",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  }
}
